<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<%= google_webfonts_init({
    google: ['Quicksand', 'Quicksand']
  }) %>
</head>
<body>

<div class="container"> 
	<div class="row">
		<div class="col-md-10 col-md-offset-1 text-center">
			<% if @hunts.blank? %>
				<h2>There are no hunts containing the term <%= params[:search] %>.</h2>
			<% end %>
			<h2>Hunt List</h2>
			<ol class="hunts"><%= render partial: "browse", collection: @hunts, as: 'hunt' %></ol>
			<br>

			<div class="text-center">
			<%= link_to 'Create a Hunt', new_hunt_path, :class => 'btn btn-capstone btn-block'%> 
			</div>
		</div>
	</div>
</div>	
</body>
</html>

